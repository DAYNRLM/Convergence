<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                       

                                         
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/fragment_member_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" tools:context=".Auth.MemberFragment">



        <androidx.core.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ngp_visib"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/select_gp"
                    android:padding="3dp"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/out_line_strok">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_nrlm_gp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nrlm_vill_vissib"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/select_village"
                    android:padding="3dp"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/out_line_strok">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_nrlm_village"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"

                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/shg_visi"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/shg_name"
                    android:padding="3dp"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/out_line_strok">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_shg_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/member_visi"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/member_name"
                    android:padding="3dp"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/out_line_strok">

                    <AutoCompleteTextView
                        android:id="@+id/spinner_member_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llSpouseName"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:layout_marginLeft="25dp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/belonging_name"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvSpouseName"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="NA"
                        android:textColor="#FF0000"
                        android:layout_marginLeft="25dp"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
