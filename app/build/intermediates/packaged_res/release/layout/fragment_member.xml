                             android:layout_height="wrap_content"
                             android:fontFamily="@font/manrope_regular"
                             android:textColor="@color/black"
                           />
                     </com.google.android.material.textfield.TextInputLayout>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="3dp"
                    android:padding="3dp"
                    >

                    <TextView
                        android:id="@+id/tvPartOfShg"
                        android:text="@string/whether_member_is_part_of_shg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"

                        />

                    <RadioGroup
                        android:id="@+id/rgPartOfShg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginRight="3dp"
                        android:padding="3dp"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:id="@+id/rbPartOfShgYes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Yes"
                            android:layout_weight="1"
                            />
                        <RadioButton
                            android:id="@+id/rbPartOfShgNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="No"
                            android:layout_weight="1"/>

                    </RadioGroup></LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="3dp"
                    android:padding="3dp"
                    android:hint="Mobile Number *"
                    app:boxStrokeColor="@color/out_line_strok"
                    app:errorEnabled="true"
                    android:id="@+id/llMobile"
                    android:visibility="gone"
                    tools:ignore="HardcodedText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_regular"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:maxLength="10" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llMobileBelongsTo"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/mobile_no_belongs_to"
                    android:padding="3dp"
                    android:textColorHint="@color/black"
                    android:visibility="gone"
                    app:boxStrokeColor="@color/out_line_strok">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerMobileBelongsTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bankShowVisid"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:layout_marginLeft="25dp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Bank Name:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtBankNameShowid"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Not Available"
                        android:textColor="#FF0000"
                        android:layout_marginLeft="25dp"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/branchShowVisid"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:layout_marginLeft="25dp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Branch Name:"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtbranchNameShowid"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Not Available"
                        android:textColor="#FF0000"
                        android:layout_marginLeft="25dp"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llReason"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:visibility="gone"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="@string/if_no_select_reason_of_discontinue_from_shg"
                    android:padding="3dp"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/out_line_strok">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerDisContinueReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llBank"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Bank Name"
                    android:padding="3dp"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/out_line_strok"
                    android:visibility="gone">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llBranch"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Branch Name"
                    android:padding="3dp"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/out_line_strok"
                    android:visibility="gone">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerBranch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="none"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llIfscCode"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:layout_marginLeft="25dp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="IFSC CODE :"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvIfscCode"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="NA"
                        android:textColor="#FF0000"
                        android:layout_marginLeft="25dp"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/llIfscCode"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="3dp"
                        android:hint="IFSC CODE"
                        android:padding="3dp"
                        app:boxStrokeColor="@color/out_line_strok"
                        app:errorEnabled="true"
                        tools:ignore="HardcodedText"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etIfscCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_regular"
                            android:textColor="@color/black"
                            android:maxLength="11"
                            />
                    </com.google.android.material.textfield.TextInputLayout>-->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/llAccountNumber"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="3dp"
                    android:hint="Account No.*"
                    android:padding="3dp"
                    app:boxStrokeColor="@color/out_line_strok"
                    app:errorEnabled="true"
                    tools:ignore="HardcodedText"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAccountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_regular"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:maxLength="17"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    style="@style/IconTextContainedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/manrope_semi_bold"
                    android:text="@string/save"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

         